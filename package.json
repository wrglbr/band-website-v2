    "@types/animejs": "^3.1.2",
    "@types/howler": "^2.2.1",
    "@types/react": "^17.0.2",
    "@types/react-dom": "^17.0.1",
    "animejs": "^3.2.1",
    "howler": "^2.2.1",
    "polished": "^4.1.0",
    "react": "^17.0.1",
    "react-dom": "^17.0.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@testing-library/react": "^11.2.5",
    "@types/jest": "^26.0.20",
    "@typescript-eslint/eslint-plugin": "^4.15.0",
    "@typescript-eslint/parser": "^4.15.0",
    "all-contributors-cli": "^6.19.0",
    "auto-changelog": "^2.2.1",
    "commitizen": "^4.2.3",
    "cross-env": "^7.0.3",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.20.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-config-standard-with-typescript": "^20.0.0",
    "eslint-import-resolver-typescript": "^2.3.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.3.1",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-standard": "^4.1.0",
    "glob": "^7.1.6",
    "husky": "^5.0.9",
    "jest": "^26.6.3",
    "lerna": "^3.22.1",
    "markdownlint": "^0.23.1",
    "markdownlint-cli": "^0.26.0",
    "ts-jest": "^26.5.1",
    "ts-loader": "^8.0.17",
    "tsconfig-paths-webpack-plugin": "^3.3.0",
    "typescript": "^4.1.5",
    "webpack": "^5.21.2",
    "webpack-cli": "^4.5.0"
  },
  "scripts": {
    "postinstall": "sh ./scripts/postinstall.sh",
    "bootstrap": "lerna bootstrap",
    "compile": "npm run compile-commonjs && npm run compile-umd",
    "compile-commonjs": "sh ./scripts/compile-commonjs.sh",
    "compile-umd": "sh ./scripts/compile-umd.sh",
    "lint": "npm run lint-js && npm run lint-md",
    "lint-js": "eslint .",
    "lint-js-fix": "eslint . --fix",
    "lint-md": "markdownlint .",
    "lint-md-fix": "markdownlint . --fix",
    "test": "jest",
    "test-watch": "jest --watch",
    "test-coverage": "jest --coverage",
    "test-list": "jest --listTests",
    "ci": "npm run bootstrap && npm run compile-commonjs && npm run lint && npm run test-coverage",
    "release": "npm run bootstrap && npm run compile && npm run lint && npm run test && lerna publish",
    "changelog": "auto-changelog --commit-limit false --template ./website/src/templates/changelog.hbs --output ./website/src/pages/project/changelog.mdx",
    "contributors-add": "all-contributors add",
    "readme-contributors-generate": "all-contributors generate",
    "readme-community-generate": "node ./scripts/readme-community-generate.js"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
